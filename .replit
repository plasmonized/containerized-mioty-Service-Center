name = "Sync BSSCI Service"
author = 45640243
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"python.*sync_main.py\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"python.*main.py\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"python.*web_main.py\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python sync_main.py"

